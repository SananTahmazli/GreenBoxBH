@model ProductDTO

@{
    ViewData["Title"] = "Update Book";
}

<form method="post" enctype="multipart/form-data" asp-controller="Admin" 
    asp-action="UpdateDTO" asp-route-id="@Model.Id" autocomplete="off">
    <h3 class="mt-3">Update Book</h3>
    <br />
    <partial name="~/Views/Shared/Notifications.cshtml" />

    <div class="form-floating mb-3">
        <input type="hidden" class="form-control" id="Id"
               placeholder="name@example.com" asp-for="Id" value="@Model.Id">
        <label for="Id">Id</label>
    </div>

    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="Name"
               placeholder="name@example.com" asp-for="Name" value="@Model.Name">
        <label for="Name">Name</label>
    </div>

    <div class="form-floating mb-3">
        <input type="number" class="form-control" id="CountOfPages"
               placeholder="name@example.com" asp-for="CountOfPages"
               value="@Model.CountOfPages" min="1">
        <label for="CountOfPages">Count of Pages</label>
    </div>

    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="Price"
               placeholder="name@example.com" asp-for="Price" value="@Model.Price">
        <label for="Price">Price</label>
    </div>

    <div class="form-floating mb-3">
        <label for="Image" class="col-sm-2 col-form-label">Image</label>
        <br /> <br />
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Image" class="form-control custom-file-input">
            </div>
        </div>
    </div>

    <div class="mb-3">
        <textarea class="form-control" id="About"
                  rows="5" asp-for="About" placeholder="Write about book...">@Model.About</textarea>
    </div>

    <button class="btn btn-success" type="submit">Save</button>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }

</form>